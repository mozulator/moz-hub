generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma/sqlite-client"
}

datasource db {
  provider = "sqlite"
  url      = "file:./ballistics.db"
}

model Weapon {
  id              String       @id @default(cuid())
  key             String       @unique
  name            String
  scopeMultiplier Float
  createdAt       DateTime     @default(now())
  updatedAt       DateTime     @updatedAt

  ammunition      Ammunition[]

  @@map("weapons")
}

model Ammunition {
  id          String            @id @default(cuid())
  key         String
  name        String
  weaponId    String
  createdAt   DateTime          @default(now())
  updatedAt   DateTime          @updatedAt

  weapon      Weapon            @relation(fields: [weaponId], references: [id], onDelete: Cascade)
  ballistics  BallisticData[]

  @@unique([weaponId, key])
  @@map("ammunition")
}

model BallisticData {
  id           String     @id @default(cuid())
  distance     Int
  mils         Float
  ammunitionId String
  createdAt    DateTime   @default(now())
  updatedAt    DateTime   @updatedAt

  ammunition   Ammunition @relation(fields: [ammunitionId], references: [id], onDelete: Cascade)

  @@unique([ammunitionId, distance])
  @@map("ballistic_data")
}

model DataVersion {
  id          String   @id @default(cuid())
  version     String
  description String?
  lastUpdated DateTime @default(now())

  @@map("data_versions")
}


