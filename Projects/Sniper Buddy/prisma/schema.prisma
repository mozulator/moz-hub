generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Weapon {
  id              String       @id @default(cuid())
  key             String       @unique // e.g., "axmc", "t5000"
  name            String       // e.g., "AXMC .338 LM"
  scopeMultiplier Float
  createdAt       DateTime     @default(now())
  updatedAt       DateTime     @updatedAt
  
  // Relations
  ammunition      Ammunition[]
  
  @@map("weapons")
}

model Ammunition {
  id          String            @id @default(cuid())
  key         String            // e.g., "fmj", "ap", "m61"
  name        String            // e.g., "Full Metal Jacket"
  weaponId    String
  createdAt   DateTime          @default(now())
  updatedAt   DateTime          @updatedAt
  
  // Relations
  weapon      Weapon            @relation(fields: [weaponId], references: [id], onDelete: Cascade)
  ballistics  BallisticData[]
  
  @@unique([weaponId, key])
  @@map("ammunition")
}

model BallisticData {
  id           String     @id @default(cuid())
  distance     Int        // meters
  mils         Float      // mill adjustment value
  ammunitionId String
  createdAt    DateTime   @default(now())
  updatedAt    DateTime   @updatedAt
  
  // Relations
  ammunition   Ammunition @relation(fields: [ammunitionId], references: [id], onDelete: Cascade)
  
  @@unique([ammunitionId, distance])
  @@map("ballistic_data")
}

model DataVersion {
  id          String   @id @default(cuid())
  version     String
  description String?
  lastUpdated DateTime @default(now())
  
  @@map("data_versions")
} 