<%- include('partials/head', { title: 'Login' }) %>

<main class="container page" style="max-width: 520px;">
  <div class="card" style="padding: var(--space-8); margin-top: var(--space-10);">
    <div style="display:flex; align-items:center; gap: var(--space-3); margin-bottom: var(--space-6);">
      <div class="category-icon" style="background: var(--accent-subtle);">
        <i data-lucide="wallet" style="color: var(--accent);"></i>
      </div>
      <div>
        <h1 class="page-title" style="margin:0;">Budget Tracker</h1>
        <p class="page-description" style="margin: var(--space-1) 0 0;">Sign in to continue</p>
      </div>
    </div>

    <% if (error) { %>
      <div class="alert alert-error" style="margin-bottom: var(--space-5);">
        <i data-lucide="alert-circle" class="alert-icon"></i>
        <span><%= error %></span>
      </div>
    <% } %>

    <form method="POST" action="<%= basePath %>/login" class="stack" style="display:flex; flex-direction: column; gap: var(--space-4);">
      <div class="form-group">
        <label for="username" class="form-label">Username</label>
        <input id="username" name="username" type="text" class="input" autocomplete="username" required />
      </div>

      <div class="form-group">
        <label for="password" class="form-label">Password</label>
        <input id="password" name="password" type="password" class="input" autocomplete="current-password" required />
      </div>

      <button type="submit" class="btn btn-primary" style="width: 100%; justify-content: center;">
        <i data-lucide="log-in"></i>
        <span>Log in</span>
      </button>
    </form>
  </div>
</main>

<%- include('partials/footer') %>


